<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/contact_view_padding">


        <TextView
            android:id="@+id/pre_call_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="call from/to"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/pre_call_buttons"
            />

        <LinearLayout
            android:id="@+id/pre_call_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/accept_call_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="ACCEPT"
                android:visibility="visible"
                />

            <Button
                android:id="@+id/reject_call_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="REJECT"
                android:visibility="visible"
                />

            <Button
                android:id="@+id/cancel_call_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="CANCEL"
                android:visibility="visible"
                />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>