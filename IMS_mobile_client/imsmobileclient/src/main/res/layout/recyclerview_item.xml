<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="@dimen/contact_view_padding"
    android:layout_height="wrap_content" >

  <ImageView
      android:id="@+id/contact_avatar"
      android:layout_width="@dimen/contact_avatar_size"
      android:layout_height="@dimen/contact_avatar_size"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:src="@tools:sample/avatars"
      android:contentDescription="TODO" />

  <ImageView
      android:id="@+id/contact_status_image"
      android:layout_height="@dimen/contact_status_size"
      android:layout_width="@dimen/contact_status_size"
      android:layout_marginStart="@dimen/contact_view_padding"
      android:scaleType="fitXY"
      app:layout_constraintStart_toEndOf="@id/contact_avatar"
      app:layout_constraintTop_toTopOf="@id/contact_avatar"
      android:src="@android:drawable/presence_offline" />

  <TextView
      android:id="@+id/contact_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@android:color/black"
      android:textSize="@dimen/contact_name_size"
      android:layout_marginStart="@dimen/contact_view_padding"
      app:layout_constraintStart_toEndOf="@id/contact_status_image"
      app:layout_constraintTop_toTopOf="@id/contact_status_image"
      tools:text="@tools:sample/full_names" />

  <TextView
      android:id="@+id/contact_sip_uri"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/contact_view_padding"
      android:textColor="@android:color/darker_gray"
      android:textSize="@dimen/sip_uri_size"
      app:layout_constraintBaseline_toBaselineOf="@id/contact_name"
      app:layout_constraintStart_toEndOf="@id/contact_name"
      app:layout_constraintTop_toTopOf="parent"
      android:text="@string/sip_uri" />

  <TextView
      android:id="@+id/contact_status_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      tools:text="@tools:sample/lorem[4:10]"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toEndOf="@id/contact_avatar"
      app:layout_constraintTop_toBottomOf="@id/contact_status_image"
      android:layout_marginStart="@dimen/contact_view_padding" />

</androidx.constraintlayout.widget.ConstraintLayout>